                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <fragment
                        android:id="@+id/summaryMap"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
